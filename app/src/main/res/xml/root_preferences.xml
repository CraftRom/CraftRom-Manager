<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_news">

        <ListPreference
            android:inputType="number"
            app:singleLine="true"
            app:title="@string/settings_news_label"
            app:key="newsarticle"
            app:defaultValue="5"
            android:entries="@array/reply_entries"
            android:entryValues="@array/list_values"
            app:summary="@string/settings_news_message"/>
    </PreferenceCategory>

</PreferenceScreen>