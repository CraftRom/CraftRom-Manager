<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_ui" app:iconSpaceReserved="false">

        <ListPreference
            app:key="@string/settings_list_themes_key"
            app:title="@string/settings_themes_title"
            android:entries="@array/theme_list"
            app:entryValues="@array/themes_values"
            app:defaultValue="default"
            app:summary="%s"
            app:iconSpaceReserved="false"
            />
        <SeekBarPreference
            app:key="@string/settings_web_font_size_key"
            app:title="@string/settings_web_font_size_title"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1"
            app:defaultValue="14"
            android:max="18"
            app:min="11"
            app:iconSpaceReserved="false"
            />


    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_general" app:iconSpaceReserved="false">

        <ListPreference
            app:key="@string/settings_list_news_key"
            app:title="@string/settings_news_title"
            android:entries="@array/news_list"
            app:entryValues="@array/news_values"
            app:defaultValue="1"
            app:summary="%s"
            app:iconSpaceReserved="false"
            />

    </PreferenceCategory>
</PreferenceScreen>