<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--region News Article -->
    <style name="NewsArticle" />

    <style name="NewsArticle.View">
        <item name="android:layout_marginTop">@dimen/normal_padding</item>
        <item name="android:layout_marginStart">@dimen/card_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_elevation</item>
    </style>

    <style name="NewsArticle.Desc">
        <item name="android:maxLines">3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsArticle.Title">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizePresetSizes">@array/autosize_title_sizes</item>
    </style>
</resources>