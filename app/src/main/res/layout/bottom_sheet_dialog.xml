<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/l1"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDialog"
            style="@style/ThemeSheet"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dragIndicator"
                    android:layout_width="48dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:contentDescription="@string/todo"
                    android:layout_gravity="center"
                    android:src="@drawable/drag" />

                <ImageView
                    android:id="@+id/featuredImg"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/todo"
                    android:minWidth="250dp"
                    android:minHeight="180dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/l_50"
                    android:text="@string/title_txt"
                    android:textAlignment="center"
                    android:textAppearance="@style/AppearanceFoundation.Body"
                    android:textSize="@dimen/headline_5.5"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/featuredImg"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/featuredImg"
                    app:layout_constraintTop_toBottomOf="@+id/featuredImg" />

                <View
                    android:id="@+id/news_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/l_50"
                    android:background="@color/blue_500"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

                <TextView
                    android:id="@+id/txtPubdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/l_50"
                    android:text=""
                    android:textAppearance="@style/AppearanceFoundation.Caption.Variant"
                    android:textColor="@color/shareColor"
                    android:textSize="11sp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="@+id/news_divider"
                    app:layout_constraintTop_toBottomOf="@+id/news_divider" />

                <ImageView
                    android:id="@+id/new_news"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="@dimen/l_50"
                    android:layout_marginTop="@dimen/l_50"
                    android:layout_marginEnd="@dimen/l_50"
                    android:src="@drawable/ic_new"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/news_divider"
                    app:layout_constraintTop_toBottomOf="@+id/news_divider"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/l_50"
                    android:textAppearance="@style/AppearanceFoundation.Caption.Variant"
                    android:textSize="@dimen/text"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@+id/txtPubdate" />

                <Button
                    android:id="@+id/butLink"
                    style="@style/WidgetFoundation.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/l3"
                    android:layout_marginEnd="@dimen/l3"
                    android:layout_marginBottom="@dimen/l_50"
                    android:layout_gravity="center_horizontal"
                    android:nextFocusLeft="@id/txtPubdate"
                    android:text="@string/view_but"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    app:cornerRadius="@dimen/r1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtContent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.core.widget.NestedScrollView>