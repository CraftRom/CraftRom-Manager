<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BottomSheetDialogTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/featuredImg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:minWidth="250dp"
        android:minHeight="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/l_50"
        android:layout_marginTop="@dimen/l_50"
        android:layout_marginEnd="@dimen/l_50"
        android:text="@string/title_txt"
        android:textAlignment="center"
        android:textAppearance="@style/AppearanceFoundation.Body"
        android:textSize="@dimen/headline_5.5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/featuredImg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/featuredImg"
        app:layout_constraintTop_toBottomOf="@+id/featuredImg" />

    <View
        android:id="@+id/news_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/l_50"
        android:background="@color/blue_500"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/l_50"
        android:layout_marginEnd="@dimen/l1"
        android:layout_marginBottom="@dimen/l_50"
        android:text=""
        android:textAlignment="viewStart"
        android:textAppearance="@style/AppearanceFoundation.Caption.Variant"
        android:textSize="@dimen/l_75"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/news_divider"
        app:layout_constraintTop_toBottomOf="@+id/news_divider"
        tools:text="v1 by melles1991" />

    <TextView
        android:id="@+id/txtPubdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/l1"
        android:layout_marginTop="@dimen/l_50"
        android:layout_marginBottom="@dimen/l_50"
        android:text=""
        android:textAppearance="@style/AppearanceFoundation.Caption.Variant"
        android:textSize="11sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/news_divider"
        app:layout_constraintTop_toBottomOf="@+id/news_divider"
        tools:ignore="SmallSp"
        tools:text="@tools:sample/date/ddmmyy" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/l_50"
        android:layout_marginTop="@dimen/l_50"
        android:layout_marginEnd="@dimen/l_50"
        android:textSize="@dimen/text"
        android:textAppearance="@style/AppearanceFoundation.Caption.Variant"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/txtPubdate"
        tools:lines="8"
        tools:text="@tools:sample/lorem/random" />

    <Button
        android:id="@+id/butLink"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/l_50"
        android:layout_marginTop="@dimen/l1"
        android:layout_marginEnd="@dimen/l_50"
        android:gravity="center"
        android:nextFocusLeft="@id/txtPubdate"
        android:text="@string/view_but"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContent" />

</androidx.constraintlayout.widget.ConstraintLayout>