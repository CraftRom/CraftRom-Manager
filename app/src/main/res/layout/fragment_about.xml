<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:padding="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_logo_splash" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText">

            <TextView
                android:layout_marginTop="24dp"
                android:textAppearance="@style/AppearanceFoundation.Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="@string/app_name"
                android:textColor="?attr/colorOnPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAppearance="@style/AppearanceFoundation.Body"
                android:layout_marginTop="4dp"
                android:text="@string/love"
                android:id="@+id/br"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAppearance="@style/AppearanceFoundation.Body"
                android:layout_marginTop="4dp"
                android:id="@+id/version"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="sans-serif-condensed"
                tools:text="TextView" />


            <RelativeLayout
                android:layout_margin="@dimen/l_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/tg_link"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_telegram"
                        android:contentDescription="@string/todo"/>

                    <ImageView
                        android:id="@+id/gh_link"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/tg_link"
                        android:src="@drawable/ic_github"
                        android:contentDescription="@string/todo"/>

                    <ImageView
                        android:id="@+id/web_link"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/gh_link"
                        android:src="@drawable/ic_www"
                        android:contentDescription="@string/todo" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    style="@style/WidgetFoundation.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_generic"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/margin_generic"
                    android:layout_marginBottom="5dp"
                    tools:layout_gravity="center">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/overlain">

                        <TextView
                            android:id="@+id/tv_about_us"
                            android:textAppearance="@style/AppearanceFoundation.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_as"
                            android:textColor="?colorPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/desc_about"
                            android:textAppearance="@style/AppearanceFoundation.Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/overlain"
                            android:text="@string/about_as_desc"
                            app:layout_constraintTop_toBottomOf="@+id/tv_about_us" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/WidgetFoundation.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_generic"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/margin_generic"
                    android:layout_marginBottom="5dp"
                    tools:layout_gravity="center">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/overlain">

                        <TextView
                            android:id="@+id/tv_upcoming"
                            android:textAppearance="@style/AppearanceFoundation.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/features"
                            android:textColor="?colorPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:textAppearance="@style/AppearanceFoundation.Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/overlain"
                            android:text="@string/features_deck"
                            app:layout_constraintTop_toBottomOf="@+id/tv_upcoming" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>