<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-151dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="?android:attr/colorPrimary"
                android:text="@string/kernel_name"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/br"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="?android:attr/colorPrimary"
                android:text="@string/kernel_welcome"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/safety_info"
            style="@style/WidgetFoundation.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_generic"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_generic"
            android:layout_marginBottom="5dp"
            android:backgroundTint="?attr/colorSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/l1"
                android:layout_marginBottom="@dimen/l1"
                android:layout_marginStart="@dimen/l1"
                android:layout_marginEnd="@dimen/l1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/block3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="2"
                        android:weightSum="10"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/prevImage"
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/todo"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_launcher"
                            app:layout_constraintHorizontal_bias="0.0" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/block4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:weightSum="10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/model_liner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:weightSum="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/model_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="@string/device"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/kernel_model"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:layout_gravity="center"
                                android:text="nonce"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:autoSizeTextType="uniform"
                                android:autoSizePresetSizes="@array/autosize_text_sizes"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/android_liner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:weightSum="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cts_liner">

                            <TextView
                                android:id="@+id/android_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:layout_weight="4"
                                android:maxLines="1"
                                android:text="@string/android_version"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/kernel_android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="nonce"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/board_liner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:weightSum="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cts_liner">

                            <TextView
                                android:id="@+id/board_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:layout_weight="4"
                                android:maxLines="1"
                                android:text="@string/board_version"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/board_version"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="nonce"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:autoSizeTextType="uniform"
                                android:autoSizePresetSizes="@array/autosize_text_sizes"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/kernel_liner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:weightSum="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cts_liner">

                            <TextView
                                android:id="@+id/kernel_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:layout_weight="4"
                                android:maxLines="1"
                                android:text="@string/kernel_version"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/kernel_version"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="nonce"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:autoSizeTextType="uniform"
                                android:autoSizePresetSizes="@array/autosize_text_sizes"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/security_patch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/security_patch_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:layout_weight="4"
                                android:maxLines="1"
                                android:text="@string/security_patch"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/kernel_security_patch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="nonce"
                                android:autoSizeTextType="uniform"
                                android:autoSizePresetSizes="@array/autosize_text_sizes"
                                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/WidgetFoundation.ProgressBar.Indeterminate"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/l_25"
            android:layout_marginBottom="@dimen/dimen_16"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btnCheck"
            style="@style/WidgetFoundation.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l3"
            android:layout_marginEnd="@dimen/l3"
            android:layout_marginBottom="@dimen/l_50"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_verify"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:cornerRadius="@dimen/r1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/evaluationType"
            android:visibility="gone"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>