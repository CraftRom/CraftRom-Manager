<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:ignore="HardcodedText,UseCompoundDrawables,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?android:attr/colorPrimary"
            android:text="@string/menu_others"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settings_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="?android:attr/colorPrimary"
            android:text="@string/others_welcome"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WidgetFoundation.Card"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="@dimen/margin_generic"
        android:layout_marginStart="@dimen/margin_generic"
        android:layout_marginTop="5dp"
        tools:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_fps_meter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/fps_head"
                android:textColor="@color/blue_500"

                android:textSize="@dimen/headline_5.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_fps_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="@dimen/padding_normal"
                android:text="@string/fps_desc"
                android:textSize="@dimen/text"
                app:layout_constraintTop_toBottomOf="@+id/tv_fps_meter_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_battery_thermal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WidgetFoundation.Card"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="@dimen/margin_generic"
        android:layout_marginStart="@dimen/margin_generic"
        android:layout_marginTop="5dp"
        tools:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_battery_thermal_remover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery Thermal Remover"
                android:textColor="@color/blue_500"
                android:textSize="@dimen/headline_5.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_battery_thermal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/padding_normal"
                android:text="Charge faster until the battery reach 45Â°C"
                android:textSize="@dimen/text"
                app:layout_constraintTop_toBottomOf="@+id/tv_battery_thermal_remover" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>