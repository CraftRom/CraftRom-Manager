<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_card"
    style="@style/WidgetFoundation.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="@dimen/margin_generic"
    android:layout_marginStart="@dimen/margin_generic"
    android:layout_marginTop="5dp"
    tools:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/featuredImg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:minWidth="250dp"
            android:minHeight="180dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/txtTitle"
            android:text="@string/title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l1"
            android:layout_marginTop="@dimen/l1"
            android:layout_marginEnd="@dimen/l1"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/eighteen_sp"
            android:textAlignment="center"
            android:textAppearance="@style/AppearanceFoundation.Body"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/featuredImg"
            app:layout_constraintStart_toStartOf="@+id/featuredImg"
            app:layout_constraintTop_toBottomOf="@+id/featuredImg"/>
        <View
            android:id="@+id/news_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/l1"
            android:background="?colorSurfaceSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />
        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/l1"
            android:text=""
            android:layout_marginTop="@dimen/l_50"
            android:layout_marginBottom="@dimen/l_50"
            android:textSize="@dimen/l_75"
            android:textStyle="italic"
            android:textAlignment="viewStart"
            android:textAppearance="@style/AppearanceFoundation.Caption.Variant"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/news_divider"
            app:layout_constraintTop_toBottomOf="@+id/news_divider"
            tools:text="v1 by melles1991" />

        <TextView
            android:id="@+id/txtPubdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l1"
            android:layout_marginTop="@dimen/l_50"
            android:layout_marginBottom="@dimen/l_50"
            android:text=""
            android:textAppearance="@style/AppearanceFoundation.Caption.Variant"
            android:textSize="11sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/news_divider"
            app:layout_constraintTop_toBottomOf="@+id/news_divider"
            tools:ignore="SmallSp"
            tools:text="@tools:sample/date/ddmmyy" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>