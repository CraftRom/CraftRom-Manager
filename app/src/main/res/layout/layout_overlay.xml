<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fps_overlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@android:drawable/screen_background_dark_transparent"
    android:paddingHorizontal="@dimen/padding_normal"
    android:paddingVertical="@dimen/padding_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_fps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textColor="@color/overlay_fps"
                android:textSize="@dimen/headline_6"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/head_fps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/l_50"
                android:text="FPS"
                android:textColor="@color/white"
                android:textSize="@dimen/headline_6"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_25"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/head_gpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPU"
                android:textColor="@color/white"
                android:textSize="@dimen/headline_5"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_gpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/l_50"
                android:text="null"
                android:textColor="@color/overlay_fps"
                android:textSize="@dimen/headline_5"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>